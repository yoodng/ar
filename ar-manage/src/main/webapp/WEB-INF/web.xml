<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID"
	version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>ar-manage</display-name>
	
	<listener>
		<listener-class>com.xzit.ar.common.init.WebInitListener</listener-class>
	</listener>
	
	<!-- 加载 spring容器, springmvc前端控制器 -->
	<servlet>
		<servlet-name>dispatcherServlet</servlet-name>
		<servlet-class>com.xzit.ar.common.init.StartupServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring/applicationContext-*.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcherServlet</servlet-name>
		<url-pattern>*.action</url-pattern>
	</servlet-mapping>
	
	<!-- post乱码过虑器 -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- 标签 -->
	<jsp-config>
		<taglib>
			<taglib-uri>/ar-taglib</taglib-uri>
			<taglib-location>/WEB-INF/ar-tag.tld</taglib-location>
		</taglib>
	</jsp-config>
	
	<!-- 错误界面处理 -->
	<error-page>
		<error-code>404</error-code>
		<location>/error/404.action</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/500.action</location>
	</error-page>
	
	<!-- 默认加载界面 -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>